<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="/public/stylesheets/style.css"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap"
      rel="stylesheet"
    />
    <title>Members Only</title>
  </head>
  <body>
    <nav class="navBar">
      <div class="loggedInWrapper">
        <div>
          <button type="button" class="submitLogIn" id="home-button">
            <a href="/">Home</a>
          </button>
        </div>
        <div class="loggedInUserName">Enter the secret word</div>
        <button type="button" class="submitLogIn" id="log-out-button">
          <a href="/log-out">Log Out</a>
        </button>
      </div>
    </nav>
    <form action="" method="POST" class="secret-form">
      <div class="secret-box secret-form-container">
        <label for="secret">
          <div class="secret-title">Secret</div>
          <div class="secret-link" id="secret-link-button">
            <img src="/public/images/question-mark.png" alt="question mark" class="secret-button"></img>

          </div>
          <div class="help-modal" id="help-modal">A transportation method</div>
        </label>
        <input
          type="text"
          name="secret"
          id="secretInput"
          placeholder="Enter Secret...."
          required
        />
        <button class="submitButton">Submit</button>
      </div>
    </form>
    <div class="overlay"></div>
    <div class="backgroundHeroEnterSecret"></div>
    <script src="./helperFunc/secretOnclicks.js"></script>
  </body>
</html>
