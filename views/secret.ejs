<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link href="/public/stylesheets/style.css" rel="stylesheet" type="text/css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@100&display=swap"
      rel="stylesheet"
    />
    <title>Members Only</title>
  </head>
  <body>
    <nav class="navBar">
      <div class="loggedInWrapper">
        <div>
          <button type="button" class="submitLogIn" id="home-button">
            <a href="/">Home</a>
          </button>
          
        </div>
        <div class="loggedInUserName">
          <% if (user) { %>
          Welcome back, <%= user.username %>
          <% } %>
        </div>
        <!-- logged in? not a member? -->
          <button class="secret-button">
            <img src="/public/images/question-mark.png" alt="question mark"></img>
          </button>
          <button type="button" class="submitLogIn" id="log-out-button">
            <a href="/log-out">Log Out</a>
          </button>
      </div>
    </nav>
    <!-- <div class="wrapper create-post-wrapper"> -->
      <form action="" method="POST" class="secret-form">
        <div class="secret-box message-container">
          <label for="secret">Secret</label>
            <input type="text" name="secret" class="createPostInput" placeholder="Enter Secret...." required />
          <button class="submitButton">Submit</button>

        </div>
      </form>
    <!-- </div> -->
    <div class="overlay"></div>
    <div class="backgroundHeroEnterSecret"></div>
  </body>
  <script>
  document.getElementById('log-out-button').onclick = function() {
        window.open("/log-out", "_self");
    };
    document.getElementById('home-button').onclick = function() {
        window.open("/", "_self");
    };
    </script>
</html>
